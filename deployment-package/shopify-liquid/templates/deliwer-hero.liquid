                <span class="stat-label">Heroes Joined</span>
              </div>
              <div class="stat">
                <span class="stat-number">{{ bottles_prevented | default: '2,847,291' }}</span>
                <span class="stat-label">Bottles Prevented</span>
              </div>
              <div class="stat">
                <span class="stat-number">{{ countries_active | default: '23' }}</span>
