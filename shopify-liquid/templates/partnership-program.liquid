<script>
function applyRestaurant() {
  document.getElementById('partner-type').value = 'restaurant';
  document.getElementById('partnership-form').scrollIntoView({ behavior: 'smooth' });
}

function applyAgent() {
  document.getElementById('partner-type').value = 'agent';
  document.getElementById('partnership-form').scrollIntoView({ behavior: 'smooth' });
}

function applyDroughtRegion() {
  document.getElementById('partner-type').value = 'drought_region_partner';
  document.getElementById('partnership-form').scrollIntoView({ behavior: 'smooth' });
}

function submitApplication(event) {
  event.preventDefault();
  
  const formData = new FormData(event.target);
  const data = Object.fromEntries(formData.entries());
  
  // Send to DeliWer partnership API
  fetch('/api/partnerships', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(result => {
    alert('Application submitted! We\'ll contact you within 24 hours.');
    event.target.reset();
  })
  .catch(error => {
    alert('Error submitting application. Please try again.');
  });
}
</script>