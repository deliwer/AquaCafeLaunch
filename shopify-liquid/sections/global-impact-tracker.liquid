<script>
function helpRegion(regionId) {
  // Track region support action
  const regions = {
    'chennai': { name: 'Chennai, India', urgency: 'critical' },
    'capetown': { name: 'Cape Town, South Africa', urgency: 'high' },
    'perth': { name: 'Perth, Australia', urgency: 'moderate' }
  };
  
  const region = regions[regionId];
  if (region) {
    alert(`Thank you for supporting ${region.name}! Your trade will be prioritized for this ${region.urgency} region.`);
    // Redirect to trade form with region priority
    window.location.href = `/pages/trade-your-iphone?priority=${regionId}`;
  }
}

function joinChallenge() {
  // Join global challenge
  alert('Welcome to the Global Community Challenge! Your next trade will contribute to helping 50,000 families.');
  window.location.href = '/pages/trade-your-iphone?challenge=global';
}

function shareChallenge() {
  // Share challenge on social media
  const shareText = 'Join me in the Global Water Crisis Challenge! Help 50,000 families get clean water by trading old iPhones. #PlanetHeroes #WaterCrisis';
  const shareUrl = window.location.href;
  
  if (navigator.share) {
    navigator.share({
      title: 'Global Water Crisis Challenge',
      text: shareText,
      url: shareUrl
    });
  } else {
    // Fallback for browsers without native sharing
    const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
    window.open(twitterUrl, '_blank');
  }
}

// Auto-update stats every 30 seconds
setInterval(() => {
  // Simulate real-time updates
  updateGlobalStats();
}, 30000);

function updateGlobalStats() {
  // In production, this would fetch real data from API
  const bottlesElement = document.getElementById('global-bottles');
  const heroesElement = document.getElementById('global-heroes');
  const co2Element = document.getElementById('co2-saved');
  const regionsElement = document.getElementById('drought-regions');
  
  if (bottlesElement) {
    const currentBottles = parseInt(bottlesElement.textContent.replace(/,/g, ''));
    const newBottles = currentBottles + Math.floor(Math.random() * 50) + 10;
    bottlesElement.textContent = newBottles.toLocaleString();
  }
  
  // Similar updates for other stats...
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  // Start periodic updates
  setTimeout(updateGlobalStats, 5000);
});
</script>

